<UserControl x:Class="ChessGame.ChessButtonLight"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChessGame"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="70" d:Background="White">
    
    <UserControl.Resources>
        <local:FieldStateToBackgroundLightConverter x:Key="FieldStateToBackgroundLightConverter" />
    </UserControl.Resources>
    <Grid>
        <Button Background="{Binding FieldState, Converter={StaticResource FieldStateToBackgroundLightConverter}}"
                BorderBrush="Gray"
                BorderThickness="1"
                Command="{Binding DataContext.ClickCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                CommandParameter="{Binding}">
            <Button.Content>
                <Image Source="{Binding FigureImageSource}"/>
            </Button.Content>
        </Button>
    </Grid>
</UserControl>